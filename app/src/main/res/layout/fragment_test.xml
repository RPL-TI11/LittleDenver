<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">
    <!-- everything you already have -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:background="#FFFFFF">

            <TextView
                android:layout_marginRight="20dp"

                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/p_circle"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="P"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/textView3" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:background="#FFFFFF"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Personal Sosial"
                        android:id="@+id/textView"
                        android:textSize="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="#FFFFFF"
                        android:textStyle="bold"
                        android:textColor="#2D95BF"
                        android:enabled="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="25 Item"
                        android:layout_marginTop="-3dp"
                        android:padding="2dp"
                        android:textSize="18px"
                        android:layout_marginLeft="70dp"
                        android:id="@+id/textView4"
                        android:background="#2D95BF"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Personal sosial digunakan untuk mengetahui penyesuaian diri anak di masyarakat dan memenuhi kebutuhan pribadi anak"
                    android:id="@+id/textView2"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/textView"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView"
                    android:background="#FFFFFF"
                    android:textColor="#333333" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6"
            android:background="#FFFFFF" >

            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/h_circle"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="H"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/textView5" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:layout_weight="1" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Adaptif-Motorik Halus"
                        android:id="@+id/textView6"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#955BA5"
                        android:enabled="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="25 Item"
                        android:layout_marginTop="-3dp"
                        android:padding="2dp"
                        android:textSize="18px"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/textView7"
                        android:background="#955BA5"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Adaptif motorik halus digunakan untuk melihat koordinasi mata-tangan, memanipulasi benda-benda kecil, pemecahan masalah"
                    android:id="@+id/textView8"
                    android:layout_marginTop="5dp"
                    android:onClick="loadTesItem"
                    android:textSize="12dp"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/textView6"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_alignStart="@+id/textView6"
                    android:background="#FFFFFF"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignRight="@+id/textView10"
            android:layout_alignEnd="@+id/textView10"
            android:background="#FFFFFF" >

            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/b_circle"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="B"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/textView9" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:layout_weight="1" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Bahasa"
                        android:id="@+id/textView10"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#e93cbc"
                        android:enabled="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="25 Item"
                        android:layout_marginTop="-3dp"
                        android:padding="2dp"
                        android:textSize="18px"
                        android:layout_marginLeft="145dp"
                        android:id="@+id/textView11"
                        android:background="#e93cbc"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Bahasa dimaksudkan bahwa anak dapat mendengar, mengerti, dan menggunakan bahasa"
                    android:id="@+id/textView12"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/textView10"
                    android:layout_alignLeft="@+id/textView10"
                    android:layout_alignStart="@+id/textView10"
                    android:background="#FFFFFF"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignRight="@+id/textView14"
            android:layout_alignEnd="@+id/textView14"
            android:background="#FFFFFF" >

            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/k_circle"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="K"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/textView13" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:layout_weight="1" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Motorik Kasar"
                        android:id="@+id/textView14"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#A76531"
                        android:enabled="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="25 Item"
                        android:layout_marginTop="-3dp"
                        android:padding="2dp"
                        android:textSize="18px"
                        android:layout_marginLeft="85dp"
                        android:id="@+id/textView15"
                        android:background="#A76531"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Motorik kasar digunakan untuk mengetahui kemampuan motorik kasar anak seoerti duduk, jalan, dan gerakan otot besar"
                    android:id="@+id/textView16"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/textView14"
                    android:layout_alignLeft="@+id/textView14"
                    android:layout_alignStart="@+id/textView14"
                    android:background="#FFFFFF"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/cobaframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"></FrameLayout>

</RelativeLayout>
</ScrollView>