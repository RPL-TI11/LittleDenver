<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:background="#FFFFFF">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:id="@+id/linearLayout">

            <ImageView
                android:layout_width="150dp"
                android:src="@drawable/kid_11"
                android:layout_height="150dp"
                android:id="@+id/imageView15" />

            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Sutan Prayudha I."
                    android:id="@+id/textView28"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Purwokerto"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:id="@+id/textView29" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="17 Agustus 2013"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:id="@+id/textView30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Berat Badan : 3,5 Kg"
                    android:textColor="#333"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:id="@+id/textView31" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Tinggi Badan : 50 cm"
                    android:layout_marginTop="5dp"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:id="@+id/textView32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Lingkar Kepala: 30 cm"
                    android:textColor="#333"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:id="@+id/textView33" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Umur : 1 Tahun 2 Bulan 3 Hari"
            android:textColor="#333333"
            android:layout_marginTop="20dp"
            android:id="@+id/textView38"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caution = 4"
                    android:textColor="#333333"
                    android:id="@+id/textView37"
                    android:layout_alignTop="@+id/textView39"
                    android:layout_toRightOf="@+id/textView39"
                    android:layout_toEndOf="@+id/textView39"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Normal = 14"
                    android:textColor="#333333"
                    android:layout_marginTop="5dp"
                    android:id="@+id/textView39"
                    android:layout_below="@+id/textView38"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delayed = 5"
                    android:textColor="#333333"
                    android:id="@+id/textView40"
                    android:layout_below="@+id/textView39"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Refusal = 5"
                    android:textColor="#333333"
                    android:id="@+id/textView41"
                    android:layout_alignTop="@+id/textView40"
                    android:layout_toRightOf="@+id/textView40"
                    android:layout_toEndOf="@+id/textView40"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Suspect / Diduga / Dicurigai ada Keterlambatan"
            android:textColor="#CC374B"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/textView42"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView41"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lakukan uji ulang item dalam 1-2 minggu untuk menghilangkan faktor sesaat seperti : rasa takut, keadaan sakit / kelelahan"
            android:textColor="#333333"
            android:layout_marginTop="10dp"
            android:id="@+id/textView43"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_below="@+id/textView42" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apabila belum ada kemajuan setelah 1 - 2 minggu masa uji ulang, maka segera periksakan anak ke ahlinya!"
            android:textColor="#333333"
            android:id="@+id/textView44"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textView43"
            android:layout_alignLeft="@+id/textView43"
            android:layout_alignStart="@+id/textView43" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TO DO LIST"
            android:paddingLeft="10dp"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/my_button_blue"
            android:id="@+id/button4"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/textView44"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

</RelativeLayout>
    </ScrollView>